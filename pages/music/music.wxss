image {
  padding: 0px;
  margin: 0px;
}
.top {
  background-color: #99d8ff;
  width: 100%;
  height: 18.75rem;
  position: relative;
  padding: 10px;
  text-align: center;
}
.top .title {
  color: #E6E6E6;
  font-size: 14px;
  margin-bottom: 16px;
}
.top .speak {
  color: #E6E6E6;
  font-size: 10px;
}
.top .rote {
  width: 6.25rem;
  height: 6.25rem;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -3.17rem;
  margin-top: -3.17rem;
}
.top .an {
  animation: rotate 5s infinite;
  -webkit-animation: rotate 4s infinite;
}
@keyframes rotate {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}
.center .icon {
  margin: 1.25rem 0rem;
  display: flex;
}
.center .icon button {
  flex: 1;
}
.center .icon button .iconfont {
  color: #87CEFA;
}
.center .icon button .big {
  font-size: 23px;
}
.penlun {
  display: flex;
  flex-direction: column;
  background-color: #DDDDDD;
  /* 留言 */
  /**index.wxss**/
}
.penlun .pen_top {
  color: #fff;
  font-size: 14px;
  background-color: #87CEFA;
  height: 40px;
  line-height: 40px;
  padding-left: 1.25rem;
}
.penlun .pen_center {
  margin-bottom: 10px;
  border-radius: 0px 0px 14px 14px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  /* 评论遮罩 */
}
.penlun .pen_center .pen_user {
  display: flex;
  padding: 8px;
}
.penlun .pen_center .pen_user .pen_icon {
  flex: 1;
}
.penlun .pen_center .pen_user .pen_icon image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: #33CC99 2px solid;
}
.penlun .pen_center .pen_user .pen_n {
  flex: 1;
  flex-direction: column;
}
.penlun .pen_center .pen_user .pen_n .pen_name {
  font-size: 14px;
  color: #B5B5B5;
}
.penlun .pen_center .pen_user .pen_n .pen_mon {
  font-size: 12px;
  color: #B5B5B5;
}
.penlun .pen_center .pen_user .zan {
  flex: 1;
  position: relative;
}
.penlun .pen_center .pen_user .zan .zan_n {
  position: absolute;
  right: 1.25rem;
  top: 8px;
  color: #33CC99;
}
.penlun .pen_center .pen_user .zan .iconfont {
  position: absolute;
  color: #33CC99;
  right: 0px;
  top: 0px;
}
.penlun .pen_center .pen_con {
  padding: 8px 40px;
  font-size: 13px;
  color: #B5B5B5;
}
.penlun .pen_center .huifu {
  display: flex ;
  justify-content: flex-end;
  font-size: 11px;
  color: #33CC99;
  padding-right: 8px;
}
.penlun .pen_center .wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.penlun .pen_center .block {
  width: 120px;
  height: 120px;
  background-color: #fff;
}
.penlun .pen_center .pen_ri {
  margin-bottom: 10px;
  display: flex ;
  justify-content: flex-end;
  font-size: 11px;
  color: #B5B5B5;
  padding-right: 8px;
}
.penlun .send-box {
  display: flex;
  flex-direction: column;
  margin: 10px 0 0 0 ;
  color: #33cc99;
  border: #33CC99 1px solid;
  border-radius: 5px;
  margin: 10px 10px;
  position: relative;
  height: 60px;
}
.penlun .input {
  color: #33CC99;
  font-size: 12px;
  padding-left: 10px;
}
.penlun .inpit_b {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 10%;
  text-align: center;
  background-color: #33CC99;
  font-size: 12px;
  color: #fff;
  border-radius: 2px;
  padding: 3px;
  margin: 8px;
}
