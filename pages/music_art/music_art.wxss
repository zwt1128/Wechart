.conter .zhubo {
  display: flex;
  flex-direction: column;
  background-color: #E1E5F0;
}
.conter .zhubo .zhubo_top {
  color: #fff;
  font-size: 14px;
  background-color: #87CEFA;
  height: 40px;
  line-height: 40px;
  padding-left: 1.25rem;
}
.conter .zhubo .zhubo_center {
  background-color: #fff;
  margin-bottom: 2px;
  margin-top: 2px;
}
.conter .zhubo .zhubo_center .zhubo_user {
  display: flex;
  padding: 18px;
}
.conter .zhubo .zhubo_center .zhubo_user .zhubo_icon image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  box-shadow: 1px 1px 15px #888888;
}
.conter .zhubo .zhubo_center .zhubo_user .zhubo_n {
  padding-left: 10px;
  display: flex;
  flex-direction: column;
}
.conter .zhubo .zhubo_center .zhubo_user .zhubo_n .zhubo_title {
  font-size: 14px;
  color: #565656;
}
.conter .zhubo .zhubo_center .zhubo_user .zhubo_n .zhubo_con {
  margin-top: 10px;
  font-size: 13px;
  color: #9A9B9B;
}
.conter .zhubo .zhubo_center .zhubo_user .zhubo_n .zhubo_si {
  margin-top: 10px;
  display: flex;
  font-size: 13px;
  color: #B5B5B5;
}
